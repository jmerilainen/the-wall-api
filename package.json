{
  "name": "the-wall-api",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "start": "node ./dist/index.js",
    "dev": "npm run clean && tsc --watch & nodemon --inspect ./dist/index.js",
    "build": "npm run clean && tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "jest",
    "test:integration": "jest --config=jest.config.integration.js",
    "typecheck": "tsc -b",
    "db:migrate": "node ./dist/db/migrate.js",
    "docker:db": "docker-compose up",
    "docker:serve": "docker-compose -f docker-compose.local.yml up",
    "docker:ci": "docker-compose -f docker-compose.ci.yml up -d"
  },
  "author": "Joonas Meril√§inen",
  "license": "MIT",
  "engines": {
    "node": "16.x"
  },
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "@types/node": "^16.11.41",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.32.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "supertest": "^6.3.3",
    "ts-jest": "^28.0.8",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "pg": "^8.8.0"
  }
}
